<div id="<%= dom_id post %>">
  <p>
    <strong>Image:</strong>
    <% if post.image.present? %>
      <%= image_tag post.image, alt: 'Image not found', onerror: "this.onerror=null;this.src='/path/to/default_image.png';" %>
    <% else %>
      <span>No image available</span>
    <% end %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

</div>
